{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../page/src/*"],
      "@molvis/core": ["../core/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/webview-app/**/*", "rslib.config.ts"]
}
